# ============================================================================
# CHATBOT IA - GESTION DE PROJETS D'ENTREPRISE
# Configuration des variables d'environnement
# ============================================================================

# ===== INTELLIGENCE ARTIFICIELLE =====
# Google Gemini API pour l'IA générative
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Speech Services
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-cloud-credentials.json
GOOGLE_PROJECT_ID=your_google_cloud_project_id

# ===== RASA PRO =====
# Licence Rasa Pro (obligatoire)
RASA_PRO_LICENSE=your_rasa_pro_license_key_here

# ===== SERVEURS ET PORTS =====
# Rasa Server
RASA_SERVER_URL=http://localhost:5005
RASA_SERVER_PORT=5005

# Action Server
ACTION_SERVER_URL=http://localhost:5055
ACTION_SERVER_PORT=5055

# Flask Backend
FLASK_SERVER_URL=http://localhost:8000
FLASK_SERVER_PORT=8000



# ===== SÉCURITÉ =====
# Clé secrète pour Flask
FLASK_SECRET_KEY=your_super_secret_flask_key_here

# JWT Secret (si utilisé)
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===== ENVIRONNEMENT =====
# Mode d'environnement
ENVIRONMENT=development
# OPTIONS: development, staging, production

# Debug mode
DEBUG=true
# OPTIONS: true, false

# Niveau de log
LOG_LEVEL=INFO
# OPTIONS: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===== FONCTIONNALITÉS IA =====
# Configuration pour la prédiction des compétences
SKILLS_PREDICTION_MODEL=gemini-pro
SKILLS_CONFIDENCE_THRESHOLD=0.7

# Configuration pour l'évaluation des risques
RISK_ASSESSMENT_MODEL=gemini-pro
RISK_ANALYSIS_DEPTH=detailed

# Configuration pour l'estimation des coûts
COST_ESTIMATION_MODEL=gemini-pro
COST_ESTIMATION_CURRENCY=EUR
COST_ESTIMATION_REGION=europe

# ===== FAISS VECTOR SEARCH =====
# Configuration pour la recherche vectorielle
FAISS_INDEX_PATH=./models/faiss_index
VECTOR_DIMENSION=768
SIMILARITY_THRESHOLD=0.8

# ===== NLTK CONFIGURATION =====
NLTK_DATA_PATH=./nltk_data

# ===== APIS EXTERNES (optionnel) =====
# OpenAI (alternative à Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== INTÉGRATIONS ENTREPRISE =====
# Jira (pour intégration gestion de projet)
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

# Slack (pour notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ===== MONITORING ET ANALYTICS =====
# Prometheus (optionnel)
PROMETHEUS_PORT=9090

# Grafana (optionnel)
GRAFANA_PORT=3000

# ===== STOCKAGE FICHIERS =====
# Dossier pour les fichiers uploadés
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Dossier pour les modèles
MODELS_FOLDER=./models

# Dossier pour les exports
EXPORTS_FOLDER=./exports

# ===== CACHE ET PERFORMANCE =====
# Redis (optionnel pour cache)
REDIS_URL=redis://localhost:6379/0

# Cache TTL en secondes
CACHE_TTL=3600

# ===== LOCALISATION =====
# Langue par défaut
DEFAULT_LANGUAGE=fr
# OPTIONS: fr, en, es, de, it

# Fuseau horaire
TIMEZONE=Europe/Paris

# Format de date
DATE_FORMAT=%d/%m/%Y

# ===== BACKUP ET MAINTENANCE =====
# Dossier de sauvegarde
BACKUP_FOLDER=./backups

# Fréquence de sauvegarde (en heures)
BACKUP_FREQUENCY=24
